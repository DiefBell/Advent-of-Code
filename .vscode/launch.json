{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "TS/JS",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "C++",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/bin/${fileBasenameNoExtension}.out",
			"cwd": "${fileDirname}",
			"preLaunchTask": "C/C++: g++ build active file",
			"stopAtEntry": false,
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb"
			}
		},
		{
			"name": "Python",
			"type": "debugpy",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"console": "internalConsole"
		},
		{
			"name": "C# (.NET Core)",
			"type": "coreclr",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"preLaunchTask": "Build C# Project",
			"program": "${fileDirname}/bin/Debug/net9.0/${fileDirnameBasename}.dll",
			"args": [],
			"cwd": "${fileDirname}",
			"stopAtEntry": false,
			"console": "internalConsole",
		},
		{
			"name": "Java",
			"type": "java",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"mainClass": "${fileBasenameNoExtension}",
			"cwd": "${fileDirname}",
			"preLaunchTask": "Compile Java",
			"args": [],
			"console": "internalConsole"
		},
		{
			"name": "Go: Launch Current File",
			"type": "go",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"program": "${file}",
			"env": {},
			"args": [],
			"cwd": "${fileDirname}",
			"console": "internalConsole"
		},
		{
			"name": "COBOL: Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}.out",
			"preLaunchTask": "Build COBOL",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb", // Adjust this if GDB is in a different location
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
            "name": "R: Debug file",
            "type": "R-Debugger",
            "request": "launch",
            "file": "${file}",
			"workingDirectory": "${fileDirname}"
        }
	]
}