{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "TypeScript",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"noDebug": true,
			"watchMode": false
		},
		{
			"name": "C++",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/bin/${fileBasenameNoExtension}.out",
			"cwd": "${fileDirname}",
			"preLaunchTask": "C/C++: g++ build active file",
			"stopAtEntry": false,
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb"
			}
		},
		{
			"name": "Python",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"cwd": "${fileDirname}"
		},
		{
            "name": "C# (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build C# Project",
            "program": "${fileDirname}/bin/Debug/net9.0/${fileBasenameNoExtension}.dll",
            "args": [],
            "cwd": "${fileDirname}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
		{
			"type": "java",
			"name": "Run Java",
			"request": "launch",
			"mainClass": "${fileBasenameNoExtension}",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"preLaunchTask": "Compile Java",
			"args": []
		  }
	]
}