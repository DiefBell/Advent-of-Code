{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "TypeScript",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"noDebug": true,
			"watchMode": false
		},
		{
			"name": "C++",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"cwd": "${fileDirname}",
			"preLaunchTask": "C/C++: g++.exe build active file",
			"stopAtEntry": false
		},
		{
			"name": "Python",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
            "name": "C# (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build C# Project",
            "program": "${workspaceFolder}/src/day04/bin/Debug/net9.0/day04.exe",
            "args": [],
            "cwd": "${workspaceFolder}/src/day04",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
	]
}